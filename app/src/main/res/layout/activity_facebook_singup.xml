<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Facebook_singup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing up"
        android:textSize="50sp"
        style="@style/CardView.Dark"
        android:layout_marginTop="10dp"
        ></TextView>


    <com.example.myapplication.ArialTextview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's free and always will be "
       android:textSize="20sp"
        app:textviewattr="1"
        style="@style/CardView.Dark"
        ></com.example.myapplication.ArialTextview>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        >

        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:hint="First name"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"

            ></EditText>
        <EditText
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:hint="Last name"
            android:paddingLeft="10dp"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="5sp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_bg"


            ></EditText>
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Email or mobile number"
        android:background="@drawable/text_bg"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingLeft="10sp"
        ></AutoCompleteTextView>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Re-enter email"
        android:background="@drawable/text_bg"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingLeft="10sp"
        ></EditText>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="password"
        android:background="@drawable/text_bg"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:paddingLeft="10sp"
        ></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birthday"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"


            ></Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/text_bg"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"

            ></Spinner>
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/text_bg"


            ></Spinner>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RadioButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginRight="10dp"
            android:text="Female"></TextView>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RadioButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="male"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="By clicking Sing up , agree to the terms and have read our date Use policy,including cookies Use"
        android:layout_marginTop="10dp"></TextView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sing Up"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:background="@drawable/buttonbg"



        ></Button>





</LinearLayout>